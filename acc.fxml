<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" fx:controller="com.votreport.controllers.Controller" stylesheets="@acc.css">
    <!-- Header -->
    <top>
        <HBox fx:id="header" styleClass="header" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Gestion de Stock" styleClass="header-title"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnToggleTheme" text="🌙" styleClass="theme-button"/>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" spacing="15">
            <padding>
                <Insets top="25" right="15" bottom="25" left="15"/>
            </padding>
            <Label text="Menu" styleClass="sidebar-title">
                <font>
                    <Font name="Roboto Bold" size="22"/>
                </font>
            </Label>
<!-- Dans la section sidebar, modifiez le bouton Ajouter Produit comme suit -->
            <Button fx:id="btnAjouterProduit" text="➕ Ajouter Produit" styleClass="sidebar-button" prefWidth="220" onAction="#showAjouterProduit"/>
            <Button fx:id="btnAsousantiter" text=" 🏢Sousentiter" styleClass="sidebar-button" prefWidth="220"/>
            <Button fx:id="btnTransfererProduit" text="↔ Transférer Produit" styleClass="sidebar-button" prefWidth="220" onAction="#showTransfererProduit"/>
            <Button fx:id="btnEnregistrerVente" text="💵 Enregistrer Vente" styleClass="sidebar-button" prefWidth="220" onAction="#showVente"/>
            <Button fx:id="btnAfficherStatistiques" text="📊 Afficher Statistiques" styleClass="sidebar-button" prefWidth="220"/>

        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="30" styleClass="main-content">
            <padding>
                <Insets top="80" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Bienvenue dans l'Application de Gestion de Stock" styleClass="welcome-label">
                <font>
                    <Font name="Roboto Bold" size="36"/>
                </font>
            </Label>
            <Label text="Gérez vos stocks, transferts, ventes et visualisez vos statistiques avec une interface moderne." styleClass="subtitle-label">
                <font>
                    <Font name="Roboto" size="20"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="50">
                <VBox styleClass="info-card">
                    <Label text="Stock Principal" styleClass="card-title"/>
                    <Label fx:id="lblStockPrincipal" text="0 produits" styleClass="card-value"/>
                </VBox>
                <VBox styleClass="info-card">
                    <Label text="Ventes ce mois" styleClass="card-title"/>
                    <Label fx:id="lblVentesMois" text="0 ventes" styleClass="card-value"/>
                </VBox>
                <VBox styleClass="info-card">
                    <Label text="Chiffre d'Affaires" styleClass="card-title"/>
                    <Label fx:id="lblChiffreAffaires" text="0 €" styleClass="card-value"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>