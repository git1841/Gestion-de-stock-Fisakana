<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.votreport.controllers.TransfererController"
            stylesheets="@acc.css">
    
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Transferer des Produits" styleClass="header-title">
                <font>
                    <Font name="Roboto Bold" size="24"/>
                </font>
            </Label>
        </HBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.5" styleClass="split-pane">
            <!-- Left side: Products in principal stock -->
            <VBox spacing="10" styleClass="left-pane">
                <Label text="Produits en Stock Principal" styleClass="section-title"/>
                <TableView fx:id="produitsTable" styleClass="stock-table">
                    <columns>
                        <TableColumn fx:id="colInfo" text="Info" prefWidth="50"/>
                        <TableColumn fx:id="refColumn" text="Référence" prefWidth="150"/>
                        <TableColumn fx:id="designationColumn" text="Désignation" prefWidth="300"/>
                        <TableColumn fx:id="quantiteColumn" text="Quantité" prefWidth="100"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
            
            <!-- Right side: Sub-entities -->
            <VBox spacing="10" styleClass="right-pane">
                <Label text="Sous-Entités" styleClass="section-title"/>
                <ListView fx:id="sousEntiteList" styleClass="sousentite-list" prefHeight="200"/>
                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="transfer-controls">
                    <Label text="Quantité à transférer:"/>
                    <TextField fx:id="quantiteField" styleClass="quantity-field" prefWidth="80"/>
                    <Button text="Confirmer Transfert" styleClass="confirm-button" 
                            onAction="#validerTransfert"/>
                </HBox>
                <Label text="Produits à transférer:" styleClass="section-title"/>
                <ListView fx:id="transferList" styleClass="transfer-list" prefHeight="200"/>
            </VBox>
        </SplitPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="footer">
            <Button text="Retour à l'accueil" styleClass="footer-button" 
                    onAction="#retourAccueil"/>
            <Label fx:id="statusLabel" styleClass="status-label"/>
        </HBox>
    </bottom>
</BorderPane>











